{
  "manifest_version": 3,
  "name": "LinkGuard",
  "version": "0.1.0",
  "description": "Click-time URL risk assistant (MVP scaffold).",
  "action": {
    "default_title": "LinkGuard"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}